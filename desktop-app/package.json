{
  "name": "lab_manager",
  "version": "1.0.0",
  "description": "T&AS Lab Inventory System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Talha Mushtaq",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.tas.labinventory",
    "productName": "T&AS Inventory System",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "T&AS Inventory"
    },
    "files": [
      "**/*",
      "splash.png",
      "!backend/build/*",
      "!backend/run_server.py",
      "!backend/run_server.spec"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/run_server",
        "to": "backend/dist/run_server",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}